---
interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogUrl?: string;
}

const {
  title = 'Nmoji - Easy Emoji Selection Tool',
  description = 'Find and filter emojis quickly with Nmoji. Search by name, category, tags, or aliases. Fast, lightweight, and open source.',
  ogImage = '/assets/images/nmoji-preview.png',
  ogUrl = 'https://nmoji.netlify.app',
} = Astro.props;

import '../styles/base.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="emoji, emoji selector, emoji filter, emoji search, web application, open source"
    />
    <meta name="author" content="Wisdom Fox Community" />
    <meta name="color-scheme" content="light dark" />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={ogUrl} />
    <meta property="og:site_name" content="Nmoji" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Canonical URL -->
    <link rel="canonical" href={ogUrl} />

    <!-- Favicons -->
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="/favicon.ico" />

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
  }
</style>
